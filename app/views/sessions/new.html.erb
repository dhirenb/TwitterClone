<div class="row">
  <div class="span4 offset4">
    <div class="well">
      <h2>Log in</h2>

      <%= form_tag sessions_path do %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="actions"><%= submit_tag "Log in", :class => "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>
